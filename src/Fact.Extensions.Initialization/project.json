{
  "version": "1.0.0-*",
  "authors": [ "Malachi Burke" ],
  "description": "Initializer/shutdown power code",
  "packOptions": {
    "releaseNotes": ""
  },

  "buildOptions": {
    "xmlDoc": "true",
    /* Disable warnings about malformed XmlDoc stuff */
    "nowarn": [ "1591", "1571", "1572", "1573", "1574", "1587" ]
  },


  "dependencies": {
    "Microsoft.Extensions.Logging.Abstractions": "1.0.1",
    "Microsoft.Extensions.DependencyInjection.Abstractions": "1.0.1"
    //"Fact.Extensions.Collection": "1.0.0-alpha016"
  },

  "frameworks": {
    /*
    Not yet friendly for 1.3 because of eventwaithandle usage
    "netstandard1.3": {
      "buildOptions": {
        "define": [
          "NETSTANDARD1_3"
        ]
      },

      "dependencies": {
        "System.IO": "4.1.0",
        "System.Linq": "4.1.0" // For ToString(delim)
        //"System.Runtime.Extensions": "4.1.0", // for Convert in NamedBagWrapper class
        //"System.Threading.Tasks.Parallel": "4.0.1"
      }
      //"imports": "dnxcore50"
    }, */
    "netstandard1.6": {
      "buildOptions": {
        "define": [
          "NETSTANDARD1_6", "NETCORE"
        ]
      },
      "dependencies": {
        "NETStandard.Library": "1.6.0"
      }
    }
  }
}
